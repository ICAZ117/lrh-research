rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for `users` collection
    match /users/{userId} {
      // Only allow authenticated user to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for all other collections
    match /{collection}/{document} {
      // Allow read access to everyone (including unauthenticated users)
      allow read: if true;

      // Deny write access unless explicitly overridden above
      allow write: if false;
    }
  }
}
